{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "types": ["react-native"],
    "moduleResolution": "node",
    "noEmit": true,
    "module": "es6",
    "strict": false,
    "target": "esnext",
    "resolveJsonModule":true,
    "strictNullChecks":true,
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@components/*": ["src/components/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
